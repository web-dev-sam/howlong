{
  "name": "howlong",
  "displayName": "How long?",
  "description": "How long is it? I mean your code...",
  "publisher": "webry",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-dev-sam/howlong"
  },
  "author": {
    "name": "Samuel Braun",
    "email": "sam@webry.com",
    "url": "https://webry.com"
  },
  "icon": "./images/icon.png",
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
        "title": "How Long",
        "properties": {
            "fileLength.cmPerCharacter": {
                "type": "number",
                "default": 0.3065,
                "description": "Use the command 'howlong.calibrate' (Calibrate File Length Measurement)"
            }
        }
    },
    "views": {
        "explorer": [
            {
                "id": "howlong.projectStats",
                "name": "How Long",
                "when": "workspaceFolderCount > 0",
                "icon": "resources/stats-icon.svg"
            }
        ]
    },
    "commands": [
        {
            "command": "howlong.calibrate",
            "title": "HowLong: Calibrate File Length Measurement"
        },
        {
            "command": "howlong.cycleFormat",
            "title": "HowLong: Cycle File Length Format"
        },
        {
            "command": "howlong.refreshProjectStats",
            "title": "Refresh",
            "icon": "$(refresh)"
        },
        {
            "command": "howlong.cycleProjectFormat",
            "title": "Cycle Format",
            "icon": "$(symbol-unit)"
        },
        {
            "command": "howlong.toggleProjectView",
            "title": "Toggle View Mode",
            "icon": "$(list-tree)"
        },
        {
            "command": "howlong.invalidateCache",
            "title": "Clear Cache",
            "icon": "$(clear-all)"
        },
        {
            "command": "howlong.analyzeWorkspace",
            "title": "HowLong: Analyze Workspace"
        }
    ],
    "menus": {
        "view/title": [
            {
                "command": "howlong.refreshProjectStats",
                "when": "view == howlong.projectStats",
                "group": "navigation@1"
            },
            {
                "command": "howlong.cycleProjectFormat",
                "when": "view == howlong.projectStats",
                "group": "navigation@2"
            },
            {
                "command": "howlong.toggleProjectView",
                "when": "view == howlong.projectStats",
                "group": "navigation@3"
            },
            {
                "command": "howlong.invalidateCache",
                "when": "view == howlong.projectStats",
                "group": "navigation@4"
            }
        ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
